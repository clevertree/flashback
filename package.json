{
  "name": "fabric-desktop",
  "productName": "Fabric Desktop",
  "version": "0.1.0",
  "description": "Hyperledger Fabric Desktop Client",
  "author": "Fabric Team",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tauri": "tauri",
    "tauri:build": "cd src-tauri && TAURI_CONFIG_DIR=.. tauri build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress": "cypress",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "cypress run --e2e",
    "test:e2e": "cypress run --spec 'cypress/e2e/chaincode.cy.ts'",
    "test:e2e:live": "CYPRESS_USE_LIVE_KALEIDO=true cypress run --spec 'cypress/e2e/kaleido-live.cy.ts'",
    "deploy:kaleido": "node scripts/deploy-to-kaleido.js",
    "deploy:kaleido:dry": "node scripts/deploy-to-kaleido.js --dry-run",
    "deploy:kaleido:live": "node scripts/deploy-kaleido-live.mjs",
    "deploy:kaleido:live:dry": "node scripts/deploy-kaleido-live.mjs --dry-run",
    "deploy:live": "node scripts/deploy-live.mjs",
    "deploy:live:dry": "node scripts/deploy-live.mjs --dry-run",
    "deploy:api": "node scripts/deploy-api.mjs",
    "deploy:api:dry": "node scripts/deploy-api.mjs --dry-run",
    "deploy:rest": "node scripts/deploy-rest-gateway.mjs",
    "deploy:rest:dry": "node scripts/deploy-rest-gateway.mjs --dry-run",
    "check:kaleido": "node scripts/check-kaleido-status.mjs",
    "list:chaincodes": "node scripts/list-chaincodes.mjs",
    "list:channels": "node scripts/list-channels.mjs",
    "deploy:network": "node scripts/deploy-network.mjs",
    "deploy:channels": "node scripts/verify-all-channels-deployed.mjs",
    "verify:channels": "node scripts/verify-all-channels-deployed.mjs",
    "cli:dev": "tsx scripts/fabric-cli.ts",
    "cli:test": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/cli-e2e.test.mjs --testTimeout=30000 --detectOpenHandles --forceExit",
    "cli:test:live": "NODE_OPTIONS='--experimental-vm-modules' USE_LIVE_KALEIDO=true jest __tests__/cli-e2e.test.mjs --testTimeout=30000 --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@tauri-apps/api": "^1.5.0",
    "@tauri-apps/cli": "^1.5.0",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.0",
    "tailwindcss": "^3.3.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.0",
    "autoprefixer": "^10.4.16",
    "cypress": "^13.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.2.0"
  }
}
